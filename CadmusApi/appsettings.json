{
  "ConnectionStrings": {
    "Default": "mongodb://localhost:27017/{0}"
  },
  "DatabaseNames": {
    "Auth": "cadmus-auth",
    "Data": "cadmus"
  },
  "Serilog": {
    "ConnectionString": "mongodb://localhost:27017/cadmus-logs",
    "MaxMbSize": 10,
    "TableName": "Logs",
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  }
}
